<header class="topbar">
  <nav class="navbar top-navbar navbar-expand-md navbar-dark">
    <div class="navbar-header">
      <%= link_to t(".home") do %>
        <%= image_tag "logo.png" %>
      <% end %>
    </div>
    <div class="navbar-collapse">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item hidden-sm-up">
          <%= link_to "", class: "nav-link nav-toggler waves-effect waves-light" do %>
            <i class="ti-menu"></i>
          <% end %>
        </li>
        
        <li class="nav-item search-box">
          <%= link_to "", class: "nav-link waves-effect waves-dark" do %>
            <i class="fa fa-search"></i>
          <% end %>

          <%= form_with url: "#", method: "get", class: "app-search" do %>
            <%= text_field_tag :search, "",  class: "form-control", placeholder: t(".placeholder_search") %>
            <a class="srh-btn"><i
                class="fa fa-times"></i></a>
          <% end %>
        </li>
      </ul>

      <ul class="navbar-nav my-lg-0">
        <li class="nav-item dropdown">
          <%= link_to "#", class: "nav-link dropdown-toggle text-muted waves-effect waves-dark",
"data-toggle": "dropdown", "aria-haspopup": "true", "aria-expanded": "false" do %>
            <%= image_tag "avata.png", alt: "user", class: "img-circle", width: "30" %>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
</header>
