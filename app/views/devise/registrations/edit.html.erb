<h2><%= "#{t ".edit"} #{resource_name.to_s.humanize}" %></h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
  html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label t(".email") %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: t(".email") %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= "#{t(".waiting_confirmation")} #{resource.unconfirmed_email}" %></div>
  <% end %>

  <div class="field">
    <%= f.label t(".password") %> <i>(<%= t ".not_change" %>)</i><br/>
    <%= f.password_field :password, autocomplete: t(".new_password") %>
    <% if @minimum_password_length %>
      <br/>
      <em>(<%= t ".characters_minimum", {"count": @minimum_password_length} %>)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label t(".password_confirmation") %><br/>
    <%= f.password_field :password_confirmation, autocomplete: t(".new_password") %>
  </div>

  <div class="field">
    <%= f.label t(".current_password") %> <i>(<%= t "confirm_change" %>)</i><br/>
    <%= f.password_field :current_password, autocomplete: t(".current_password") %>
  </div>

  <div class="actions">
    <%= f.submit t(".update") %>
  </div>
<% end %>

<h3><%= t ".create_account" %></h3>

<p><%= "un_happy" %>? <%= button_to t ".create_account",
  registration_path(resource_name), data: { confirm: t(".comfirm") },
  method: :delete %></p>

<%= link_to t(".back"), :back %>
