<tr id="<%= "combo-#{combo.id}" %>" class="<%= "stt-#{combo_counter}" %>">
  <td><%= get_index_page combo_counter %></td>
  <td><%= image_tag combo.images.thumbnail if combo.images.thumbnail.nil? %></td>
  <td><%= combo.name %></td>
  <td><%= combo.price %></td>
  <td><%= combo.status %></td>
  <td>
    <button class="btn btn-info btn-sm">
      <i class="fa fa-eye"></i>
    </button>

    <button class="btn btn-warning btn-sm">
      <i class="fa fa-edit"></i>
    </button>
    <%= link_to manager_combo_path(combo), method: :delete, data: {confirm: t(".sure")},
      class: "btn btn-danger btn-sm" do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </td>
</tr>
