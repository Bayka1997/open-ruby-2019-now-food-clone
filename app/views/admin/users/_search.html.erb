<div class="cart-body">
  <%= search_form_for [:admin, @search] do |f| %>
    <div class="row">
      <div class="col-6">
        <div class="form-group">
          <%= f.label t(".name") %>
          <%= f.search_field :name_cont, class: "form-control form-control-line" %>
        </div>
      </div>
      <div class="col-6">
        <div class="form-group">
          <%= f.label t(".email") %>
          <%= f.search_field :email_cont, class: "form-control form-control-line" %>
        </div>
      </div>
      <div class="col">
        <%= f.submit t(".search"), class: "btn btn-success btn-sm mb-2 pt-0" %>
      </div>
    </div>
  <% end %>
</div>
