<div class="col-lg-3 col-md-6 single-blog">
  <div class="thumb mb-3">
    <%= image_tag get_thumnail(product), class: "img-responsive" %>
  </div>
  <a href="#" class="genric-btn primary-border buton_add mb-2">
    <%= t ".add_to_cart" %>
  </a>
  <h4><%= number_to_vnd product.price %></h4>
  <div class="meta-bottom d-flex justify-content-between">
    <p><i class="fa fa-comment"></i> <%= t ".comment", count: count_comment(product) %></p>
  </div>
</div>
